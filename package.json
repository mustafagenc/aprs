{
  "name": "aprs-position-sender",
  "version": "1.0.1",
  "description": "APRS Position Packet Generator with APRS-IS Support - Desktop App",
  "license": "ISC",
  "author": "TB2ABI",
  "type": "commonjs",
  "main": "electron-main.js",
  "homepage": "https://github.com/mustafagenc/aprs",
  "repository": {
    "type": "git",
    "url": "https://github.com/mustafagenc/aprs.git"
  },
  "scripts": {
    "start": "node web-server.js",
    "cli": "node index.js",
    "simulate": "node index.js --simulate",
    "send": "node index.js --send",
    "auto": "node index.js --auto",
    "status": "node index.js --status",
    "web": "node web-server.js",
    "electron": "electron .",
    "electron-dev": "nodemon --exec electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "aprs",
    "amateur-radio",
    "position-sender",
    "aprs-is",
    "ham-radio",
    "electron",
    "desktop-app"
  ],
  "dependencies": {
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "socket.io": "^4.7.0"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.1.10"
  },
  "build": {
    "appId": "com.tb2abi.aprsfi",
    "productName": "APRS-FI Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron-main.js",
      "electron-preload.js",
      "web-server.js",
      "index.js",
      "package.json",
      ".env",
      "public/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "public/favicon/apple-touch-icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "public/favicon/favicon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/favicon/favicon-32x32.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
